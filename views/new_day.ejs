<!doctype HTML>
<html lang="en">

<head>
  <title> Enter Data for Today </title>

  <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
  <meta http-equiv="content-language" content="en-US"/>
  <meta name="robots" content="follow"/>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  <script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="/bower_components/moment/min/moment.min.js"></script>
  <script type="text/javascript" src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
  <!--<script src="public/js/highcharts.js"></script>-->

  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" media="screen"/>
  <link rel="stylesheet" href="/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css"/>
  <link rel="stylesheet" type="text/css" href="/public/css/custom_style.css"/>

</head>

<body>
  <div class="col-lg-10 col-lg-offset-1">
    <div class="container">

      <div class="row">
      
        <div class="col-lg-6">
        <h1>Enter Data for Today:</h1>
          <div class="input-group">
            <button class="btn btn-default" id="test">Add Run</button>
            <button class="btn btn-primary" id="test2">Add Skiing</button>
            <button class="btn btn-primary">Add Lift</button>
            <button class="btn btn-primary" id="btn_add_meals">Add Meals</button>
          </div>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="col-lg-6">
          <label>Select Date (today is default)</label>
          <div class="input-group date" id="datetimepicker1">
            <input type='text' class="form-control" name="weight_date" />
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
          <br/>
        </div>
      </div>

      <!-- BEGIN WEIGHT -->
      <div class="row">
        <div class="col-lg-6">
          <form class="form-inline" role="form" action="/new_day" method="post">
            <div class="form-group">

              <div>
                <label>Morning Weight:</label>
                <input type="text" class="form-control" name="morning_weight" id="morning_weight"></input>
                <select class="form-control" id="morning_weight_unit">
                  <option>lbs</option>
                  <option>kgs</option>
                </select>
              </div>

              <div>
                <label>Evening Weight:</label>
                <input type="text" class="form-control" id="evening_weight"></input>
                <select class="form-control" id="evening_weight_unit">
                  <option>lbs</option>
                  <option>kgs</option>
                </select>
              </div>
              <br>
            </div>
            <div>
              <button type="submit" class="btn btn-success">Add Weight</button>
            </div>
          </form>
        </div>
      </div>
      <!-- /END WEIGHT -->

      <!-- BEGIN MEALS -->
      <div class="row">
        <br>
        <div class="col-lg-6" id="meals">
          <form class="form-inline" role="form" id="breakfast_div">
            <div class="form-group">
              <label>Breakfast:</label>
              <span>
                <input type="text" class="form-control" id="breakfast"></input>
                <select class="form-control" id="breakfast_quantity">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                </select>
              </span>
            </div>
            <button type="submit" class="btn btn-default">Add</button>
          </form>
          <form class="form-inline" role="form">
            <div class="form-group">
              <label>Lunch:</label>
              <input type="text" class="form-control" id="lunch"></input>
              <select class="form-control" id="lunch_quantity">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
              </select>
            </div>
            <button type="submit" class="btn btn-default">Add</button>
          </form>
          <form class="form-inline" role="form">
            <div class="form-group">
              <label>Dinner:</label>
              <input type="text" class="form-control" id="dinner"></input>
              <select class="form-control" id="dinner_quantity">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
              </select>
            </div>
            <button type="submit" class="btn btn-default">Add</button>
          </form>
        </div>
      </div>
      <!-- /END MEALS -->

      </div>

    </div>
    
  </div>

  <script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });

    // Toggle the showing of meals
    $(document).ready(function() {
      $('#btn_add_meals').click(function() {
        $('#meals').toggle(250);

        var meals_button = document.getElementById('btn_add_meals');

        if (meals_button.className == 'btn btn-primary') {
          meals_button.className = 'btn btn-danger';
          meals_button.innerHTML = 'Remove Meals';
        } else {
          // alert("False");
          meals_button.className = 'btn btn-primary';
          meals_button.innerHTML = 'Add Meals'
        }

      });
    });
  </script>
  
</body>

</html>
