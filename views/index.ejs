        </tbody>
      </table>
    </div>

  </div>

  <% include ./partials/footer.ejs %>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  <script type="text/javascript">
  $(function () {
      $(document).ready(function () {

        // var x = {{running_data.planned_data}};
        var planned_dist_data = <%- JSON.stringify( running_data.planned_data ); %>
        var actual_dist_data = <%- JSON.stringify( actual_run_data.actual_data ); %>
        var morning_weight = <%- JSON.stringify( weight_data.morning_weight ); %>
        var evening_weight = <%- JSON.stringify( weight_data.evening_weight ); %>
        
          Highcharts.setOptions({
              global: {
                  useUTC: false
              }
          });

          $('#run_distance').highcharts({
              chart: {
                  type: 'line'
              },
              title: {
                  text: '<%= running_data.title %>'
              },
              xAxis: {
            type: 'category',
            labels: {
                      rotation: -45
                }
              },
              yAxis: {
                  min: 0,
                  title: {
                    text: '<%= running_data.yAxisTitle %>'
                  },
                  plotLines: [{
                      value: 0,
                      width: 1,
                      color: '#808080'
                  }]
              },
              legend: {
                  enabled: false
              },
              exporting: {
                  enabled: false
              },
              series: [{
                  name: '<%= running_data.seriesName %>',
                  data: planned_dist_data,
                  dataGrouping: {
                        enabled: true
                    }
                },
                {
                  name: '<%= actual_run_data.seriesName %>',
                  data: actual_dist_data,
                  dataGrouping: {
                        enabled: true
                    }
                }]
            });

            $('#weight_tracker').highcharts({
              chart: {
                  type: 'line'
              },
              title: {
                  text: '<%= weight_data.title %>'
              },
              xAxis: {
            type: 'category',
            labels: {
                      rotation: -45
                }
              },
              yAxis: {
                  title: {
                    min: 0,
                      text: '<%= weight_data.yAxisTitle %>'
                  },
                  plotLines: [{
                      value: 0,
                      width: 1,
                      color: '#808080'
                  }]
              },
              legend: {
                  enabled: false
              },
              exporting: {
                  enabled: false
              },
              series: [{
                  name: 'Morning Weight',
                  data: morning_weight,
                  dataGrouping: {
                        enabled: true
                    }
                },
                {
                  name: 'Evening Weight',
                  data: evening_weight,
                  dataGrouping: {
                        enabled: true
                    }
                }]
            });
        });
    })
  </script>
</body>

</HTML>
